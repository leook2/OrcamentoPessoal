<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <%- include('./partials/head.ejs')%>
        <link rel="stylesheet" href="../css/login.css">
        <script src="https://kit.fontawesome.com/feed27c0da.js" crossorigin="anonymous"></script>
        <title>Login</title>
</head>

<body>
    <main>
        <section class="login col-lg-7">
            <div class="container">
                <div class="row g-0">
                    <div class="col-lg-7">
                        <img src="../img/imgLogin.png" class="img-fluid" width="100%" alt="login">
                    </div>
                    <div class="col-lg-5 text-center py-5">
                        <h1 class="pt-5">Login</h1>
                        <form action="/login" method="POST">
                            <div class="form-row py-3">
                                <div class="offset-1 col-lg-10">
                                    <input type="text" id="email" class="input px-3" placeholder="Email ">
                                </div>
                            </div>

                            <div class="form-row py-3">
                                <div class="offset-1 col-lg-10">
                                    <input type="password" class="input px-3" placeholder="Senha ">
                                </div>
                            </div>

                            <div class="form-row py-4">
                                <div class="offset-1 col-lg-10">
                                    <button type="submit" class="btn1">Entrar</button>
                                </div>
                            </div>
                            <br><br><br>
                            <a href="http://localhost:8182/cadastro"
                                style="color: rgb(86, 85, 85); font-family: 'Poppins', sans-serif;">Crie sua conta <i
                                    style="font-size: 12px;" class="fa-solid fa-right-long"></i></a>
                        </form>
                    </div>
                </div>
            </div>
            <a id="voltar" href="http://localhost:8182/home">Inicio</a>
        </section>
    </main>
</body>

</html>